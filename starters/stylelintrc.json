{
  "__hxmstyle__": [
    "--------------------------------------------------------------------------------------------",
    " BEWARE: This file is manged by \"hxmstyle\" and will be rewritten on next install/update.    ",
    "--------------------------------------------------------------------------------------------"
  ],
  "extends": "stylelint-config-recommended-scss",
  "files": ["**/*.scss"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": 2,
    "string-quotes": "single",
    "max-empty-lines": 1,
    "selector-class-pattern": null,
    "scss/no-global-function-names": null,
    "order/order": [
      "dollar-variables",
      {
        "type": "at-rule",
        "name": "extend"
      },
      {
        "type": "at-rule",
        "name": "include"
      },
      {
        "type": "at-rule",
        "name": "mixin"
      },
      {
        "type": "at-rule",
        "name": "function"
      },
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      [
        {
          "order": "flexible",
          "emptyLineBefore": "always",
          "properties": ["content"]
        },
        {
          "order": "flexible",
          "emptyLineBefore": "always",
          "properties": ["container-type", "container-name", "container"]
        },
        {
          "order": "flexible",
          "emptyLineBefore": "always",
          "properties": [
            "all",
            "appearance",
            "box-sizing",
            "contain",
            "contain-intrinsic-size",
            "content-visibility",
            "display",
            "direction",
            "flex",
            "flex-grow",
            "flex-shrink",
            "flex-basis",
            "flex-direction",
            "flex-wrap",
            "flex-flow",
            "align-content",
